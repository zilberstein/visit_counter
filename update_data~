#!/usr/bin/python
import json

# Load json containing info about the website
f = open('data.json', 'r')
s = f.read()
f.close()

data = json.loads(s)

data['visits'] += 1
IP = sys.argv[1]

if IP not in data['IPs']:
    data['IPs'].append(IP)
    data['unique_visits'] += 1

f = open('data.json', 'w')
f.write(json.dumps(data))
f.close()
